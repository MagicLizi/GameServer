<script>
    function edit(index, item_id, user_id){
        var val = $('#count' + index).val();
        var des = $('#description' + index).val();
        window.location.href = '/item/edit?user_id='+user_id+'&item_id='+item_id+'&item_count='+val+'&description=' + des;
    }

</script>

<div class="message">
  <%-message%>
</div>

<form id="form1" name="form1" method="get" action="/item">
<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td height="30">玩家id</td>
    <td><input type="text" name="user_id" id="user_id" value="<%-uid%>"></td>
  </tr>
  <tr>
    <td height="30"><input name="search" type="hidden" id="search" value="1" /></td>
    <td><input type="submit" name="submit" id="submit" value="搜索" /></td>
    </tr>
</table>
</form>
<form id="form2" name="form2" method="post" action="/item/add">
<table width="99%" border="0" align="center" cellpadding="0" cellspacing="1" bgcolor="#c0de98">
    <tr>
        <td class="title">玩家id</td>
        <td class="title">道具id</td>
        <td class="title">道具名称</td>
        <td class="title">道具数量</td>
        <td class="title">操作</td>
    </tr>
<%
    results.forEach(function(item, i){
%>
    <tr>
    <td class="data"><%-item.user_id%></td>
        <td class="data"><%-item.item_id%></td>
        <td class="data"><%-item.name%></td>
        <td class="data"><input type="text" name="count<%-i%>" id="count<%-i%>" value=<%-item.item_count%>></td>
        <td class="data">
            <input type="text" name="description<%-i%>" id="description<%-i%>" />
            <a href="javascript:edit(<%-i%>,'<%-item.item_id%>',<%-item.user_id%>);">修改</a>
        </td>
    </tr>
<%
});
%>
<tr>
           <td class="data"><input type="text" name="user_id" id="user_id" /></td>
           <td class="data"><input type="text" name="item_id" id="item_id" /></td>
           <td class="data"></td>
           <td class="data"><input type="text" name="item_count" id="item_count" /></td>
           <td class="data">
                <input type="text" name="description" id="description" />
                <input type="submit" name="add" id="add" value="添加">
           </td>
    </tr>
</table>
</div>
</form>