<div class="message">
  <%-message%>
</div>

<form id="form1" name="form1" method="post" action="">
<table width="100%" border="0" cellpadding="0" cellspacing="0">
    <tr>
        <td><input type="text" name="name" id="name" /></td>
        <td>
          <input type="radio" name="type" id="radio1" value="1" checked="checked" />
          ID
          <input type="radio" name="type" id="radio2" value="2" />
          昵称
        </td>
        <td><input type="submit" name="search" id="search" value="提交" /></td>
    </tr>
    <tr>
      <td colspan="3"><hr /></td>
    </tr>
    <tr>
      <td>ID：<%-result.player_id%></td>
      <td>昵称：<%-result.nickname%></td>
      <td></td>
    </tr>
    <tr>
      <td>金贝：<%-result.chips%></td>
      <td>通宝卡：<%-result.diamond%></td>
      <td></td>
    </tr>
    <tr>
      <td>胜利：<%-result.victory%></td>
      <td>失败：<%-result.failure%></td>
      <td></td>
    </tr>
    <tr>
      <td>注册时间：<%-!result.create_date_utc?'':result.create_date_utc.format('yyyy-MM-dd hh:mm:ss')%></td>
      <td>机器人：<%-result.type==2?"是":"否"%></td>
      <td></td>
    </tr>
    <tr>
      <td colspan="3"><hr /></td>
    </tr>
    <tr>
      <td><a href="role/sanction?id=<%-result.player_id%>">角色制裁</a></td>
      <td></td>
      <td></td>
    </tr>
</table>
</form>