<script type="text/javascript">
    $(function () {
        $('#sd').datetimepicker();
        $('#ed').datetimepicker();
    });
</script>
<div class="pagetitle">
    <a href="/pay">返回</a>
</div>
<div class="message">
    <%-message%>
</div>
<form id="form1" name="form1" method="get">
<table width="100%" border="0" cellpadding="0" cellspacing="0" style="line-height:30px;">
    <tr>
        <td width="100">
          <input type="radio" name="type" id="radio1" value="1" <%if(type==1){%> checked="checked"<%}%> />
          ID
          <input type="radio" name="type" id="radio2" value="2" <%if(type==2){%> checked="checked"<%}%> />
          昵称
        </td>
        <td width="200"><input type="text" name="name" id="name" value="<%-name%>" /></td>
        <td width="100"></td>
        <td></td>
        <td></td>
    </tr>
    <tr>
        <td>开始日期：</td>
        <td><input type="text" name="sd" id="sd" value="<%-begin_date%>" /></td>
        <td>结束日期：</td>
        <td><input type="text" name="ed" id="ed" value="<%-end_date%>" /></td>
        <td><input type="submit" name="search" id="search" value="提交" /></td>
    </tr>
    <tr>
      <td colspan="5"><hr /></td>
    </tr>
</table>
</form>
<table width="100%" border="0" align="center" cellpadding="0" cellspacing="1" bgcolor="#c0de98">
    <tr>
        <td class="title">ID</td>
        <td class="title">用户ID</td>
        <td class="title">获取金贝</td>
        <td class="title">获取通宝卡</td>
        <td class="title">价格</td>
        <td class="title">结果</td>
        <td class="title">支付时间</td>
    </tr>
<%
    results.forEach(function(item){
%>
<tr>
    <td class="data"><%-item.id%></td>
    <td class="data"><%-item.playerid%></td>
    <td class="data"><%-item.chips%></td>
    <td class="data"><%-item.diamon%></td>
    <td class="data"><%-item.price%></td>
    <td class="data"><%-item.result%></td>
    <td class="data"><%-item.dateUtc.format('yyyy-MM-dd hh:mm:ss')%></td>
</tr>
<%
});
%>
    <td colspan="7" align="center">[
<%
    for(var i=1;i<=count;i++){
%>
    <a href="?type=<%-type%>&name=<%-name%>&sd=<%-begin_date%>&ed=<%-end_date%>&page_no=<%-i%>"><%-i%></a>
<%
    }
%> ]
    </td>
</table>