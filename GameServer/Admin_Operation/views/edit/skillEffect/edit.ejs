            <select name="quality" id="quality">
                <option value="1"<%if(result.quality==1){%>selected="selected"<%}%>>白</option>
                <option value="2"<%if(result.quality==2){%>selected="selected"<%}%>>绿</option>
                <option value="3"<%if(result.quality==3){%>selected="selected"<%}%>>蓝</option>
                <option value="4"<%if(result.quality==4){%>selected="selected"<%}%>>紫</option>
                <option value="4"<%if(result.quality==5){%>selected="selected"<%}%>>橙</option>
            </select>
        </td>
    </tr>
    <tr>
        <td class="title">
            元素属性
        </td>
        <td class="data">
            <select name="element_type" id="element_type">
                <option value="1"<%if(result.element_type==1){%>selected="selected"<%}%>>红</option>
                <option value="2"<%if(result.element_type==2){%>selected="selected"<%}%>>黄</option>
                <option value="3"<%if(result.element_type==3){%>selected="selected"<%}%>>蓝</option>
                <option value="4"<%if(result.element_type==4){%>selected="selected"<%}%>>绿</option>
