<script type="text/javascript">
    $(function () {
        $('#begin_date').datetimepicker();
        $('#end_date').datetimepicker();
    });
</script>
<div class="pagetitle">
    <a href="/message">返回列表</a>
</div>
<div class="message">
    <%-message%>
</div>
<form id="form1" name="form1" method="post">
<table width="80%" border="0" cellpadding="0" cellspacing="1" bgcolor="#c0de98">
    <tr>
        <td class="title1">类型</td>
        <td class="data1">
             系统消息<input name="box1" type="checkbox" id="box1" value="2" />
        </td>
    </tr>
    <tr>
        <td class="title1">用户域</td>
        <td class="data1">
             <input type="text" name="user_id" id="user_id" value="" /> (支持[1或1-2或3-4,5-6]格式)
        </td>
    </tr>
    <tr>
        <td class="title1">名称</td>
        <td class="data1">
             <input type="text" name="name" id="name" value="" />
        </td>
    </tr>
    <tr>
        <td class="title1">内容</td>
        <td class="data1">
            <textarea name="content" id="content" cols="45" rows="5"></textarea>
        </td>
    </tr>
    <tr>
        <td class="title1">排序编号</td>
        <td class="data1">
           <input type="text" name="sort" id="sort" value="1" />
        </td>
    </tr>
    <!--
    <tr>
        <td class="title1">开始日期</td>
        <td class="data1">
             <input type="text" name="begin_date" id="begin_date" value="" />
        </td>
    </tr>
    <tr>
        <td class="title1">结束日期</td>
        <td class="data1">
            <input type="text" name="end_date" id="end_date" value="" />
        </td>
    </tr>
    -->
    <tr>
        <td class="title1">是否有效</td>
        <td class="data1">
            无效<input type="radio" name="is_valid" id="is_valid1" value="0" />
            有效<input type="radio" name="is_valid" id="is_valid2" value="1" checked="checked" />
        </td>
    </tr>
    <tr>
        <td class="title1"></td>
        <td class="data1">
            <input type="submit" name="submit" id="submit" value="提交" />
        </td>
    </tr>
</table>
</form>