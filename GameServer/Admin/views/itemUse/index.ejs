<script type="text/javascript">
    $(function () {
        $('#sd').datetimepicker();
        $('#ed').datetimepicker();
    });
</script>
<form id="form1" name="form1" method="get">
     开始日期：<input type="text" name="sd" id="sd" value="<%-begin_date%>" />
     结束日期：<input type="text" name="ed" id="ed" value="<%-end_date%>" />
     类型：<select name="select" id="select"/>
     <option value=2 <%if(type==2){%>selected="selected"<%}%>>话费</option>
     <option value=3 <%if(type==3){%>selected="selected"<%}%>>实物</option>
     </select>
     <input type="submit" name="submit" id="submit" value="提交" />
</form>
</div>
<table width="100%" border="0" align="center" cellpadding="0" cellspacing="1" bgcolor="#c0de98">
    <tr>
        <td class="title">ID</td>
        <td class="title">兑奖类型</td>
        <td class="title">用户ID</td>
        <td class="title">道具</td>
        <td class="title">兑奖数量</td>
        <td class="title">兑奖时间</td>
        <td class="title">结束时间</td>
        <td class="title">兑奖状态</td>
        <td class="title">充值手机</td>
        <td class="title">邮编</td>
        <td class="title">收件人姓名</td>
        <td class="title">地址</td>
        <td class="title">收件人联系电话</td>
    </tr>
<%
    results.forEach(function(item){
%>
<tr>
    <td class="data"><%-item.order_id%></td>
    <td class="data"><%-item.order_type%></td>
    <td class="data"><%-item.user_id%></td>
    <td class="data"><%-item.item_name%></td>
    <td class="data"><%-item.item_count%></td>
    <td class="data"><%-item.create_date.format('yyyy-MM-dd hh:mm:ss')%></td>
    <td class="data"><%-item.end_date?item.end_date.format('yyyy-MM-dd hh:mm:ss'):""%></td>
    <td class="data"><%-item.status%></td>
    <td class="data"><%-item.phone_number%></td>
    <td class="data"><%-item.receiver_post_code%></td>
    <td class="data"><%-item.receiver_name%></td>
    <td class="data"><%-item.receiver_address%></td>
    <td class="data"><%-item.receiver_phone_number%></td>
</tr>
<%
});
%>
    <td colspan="8" align="center">[
<%
    for(var i=1;i<=count;i++){
%>
    <a href="?sd=<%-begin_date%>&ed=<%-end_date%>&select=<%-type%>&page_no=<%-i%>"><%-i%></a>
<%
    }
%> ]
    </td>
</table>