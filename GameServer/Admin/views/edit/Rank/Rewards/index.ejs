<div class="pagetitle">
    <a href="/Rewards/add">添加奖励</a>
</div>
<table width="99%" border="0" align="center" cellpadding="0" cellspacing="1" bgcolor="#c0de98">
    <tr>
        <td class="title">编辑</td>

        <td class="title">排行上限</td>
        <td class="title">排行下限</td>
        <td class="title">奖励道具</td>
        <td class="title">数量</td>
        <td class="title">奖励类型</td>
        <td class="title">创建日期</td>
    </tr>
    <%
    results.forEach(function(item){
    %>
    <tr>
        <td class="data"><a href="/Rewards/edit?id=<%-item.Rewards_Id%>"><input type="submit" name="submit" id="submit" value="编辑" /></a></td>
        <td class="data"><%-item.Max_Rank%></td>
        <td class="data"><%-item.Min_Rank%></td>
        <td class="data"><%-item.Item_Name%></td>
        <td class="data"><%-item.Item_Amount%></td>
        <td class="data"><%if(item.Rewards_Type == 1 ){%>每日奖励<%}else{%>最高排名奖励<%}%></td>
        <td class="data"><%-item.Create_Date.format('yyyy-MM-dd hh:mm:ss')%></td>
    </tr>
    <%
    });
    %>
</table>