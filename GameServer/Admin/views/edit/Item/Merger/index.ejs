<div class="pagetitle">
    <a href="/Item/Merger/add?id=<%-results.Item_Id%>">添加合成物品</a>
</div>
<table width="99%" border="0" align="center" cellpadding="0" cellspacing="1" bgcolor="#c0de98">
    <tr>
        <td class="title">编辑</td>
        <td class="title">编号</td>
        <td class="title">目标物品</td>
        <td class="title">源物品</td>
        <td class="title">源物品数量</td>
        <td class="title">合成类型</td>
        <td class="title">创建日期</td>
    </tr>
    <%
            results.result.forEach(function(item){
    %>
    <tr>
        <td class="data"><a href="/Item/Merger/edit?id=<%-item.Merger_Id%>"><input type="submit" name="submit" id="submit" value="编辑" /></a>
            <a href="/Item/Merger/del?id=<%-item.Merger_Id%>&itemid=<%-item.Target_Item_Id%>"><input type="submit" name="delsubmit" id="delsubmit" value="删除" /></a></td>
        <td class="data"><%-item.Merger_Id%></td>
        <td class="data"><%-item.Target_Item_Name%></td>
        <td class="data"><%-item.Source_Item_Name%></td>
        <td class="data"><%-item.Source_Item_Amount%></td>
        <td class="data"><%
            switch (item.Merger_Type){
            case enums.Merger_Type.Item:
            %>合成物品<%
                break;
            case enums.Merger_Type.Scroll:
            %>合成卷轴<%
                break;
            case enums.Merger_Type.Equip:
            %>合成装备<%
                break;
            case enums.Merger_Type.Hero:
            %>合成英雄<%
                break;
                default :
            }%></td>
        <td class="data"><%-item.Create_Date.format('yyyy-MM-dd hh:mm:ss')%></td>
    </tr>
    <%
    });
    //}
    %>
</table>