<div class="pagetitle">
     <a href="/config/regions/maker">返回</a>
</div>
<div class="message">
    <%-message%>
</div>
<form id="form1" name="form1" method="post">
<table width="100%" border="0" align="center" cellpadding="0" cellspacing="1" bgcolor="#c0de98">
    <tr>
        <td class="title1">母级</td>
        <td class="data1">
           <select name="type" id="type">
               <option value="1">自由桌</option>
               <option value="2">比赛场</option>
               <option value="3">免费赢奖</option>
               <option value="4">一战成名</option>
           </select>
        </td>
    </tr>
    <tr>
        <td class="title1">ID</td>
        <td class="data1"><input type="text" name="region_id" id="region_id" /></td>
    </tr>
    <tr>
        <td class="title1">名称</td>
        <td class="data1"><input type="text" name="name" id="name" /></td>
    </tr>
    <tr>
        <td class="title1">描述</td>
        <td class="data1"><textarea name="description" id="description"></textarea></td>
    </tr>
    <tr>
        <td class="title1">游戏场详细描述</td>
        <td class="data1"><textarea name="detail_description" id="detail_description"></textarea></td>
    </tr>
    <tr>
        <td class="title1">背景ID</td>
        <td class="data1"><input type="text" name="scene_id" id="scene_id" /></td>
    </tr>
    <tr>
        <td class="title1">倍率</td>
        <td class="data1"><input type="text" name="antes" id="antes" /></td>
    </tr>
    <tr>
        <td class="title1">最小金贝</td>
        <td class="data1"><input type="text" name="min" id="min" /></td>
    </tr>
    <tr>
        <td class="title1">最大金贝</td>
        <td class="data1"><input type="text" name="max" id="max" /></td>
    </tr>
    <tr>
        <td class="title1">托管开放</td>
        <td class="data1"><input name="box1" type="checkbox" id="box1" value="1" /></td>
    </tr>
    <tr>
        <td class="title1">选牌帮助开放</td>
        <td class="data1"><input name="box2" type="checkbox" id="box2" value="1" /></td>
    </tr>
    <tr>
        <td class="title1">奖励描述</td>
        <td class="data1"><textarea name="reward_description" id="reward_description"></textarea></td>
    </tr>
    <tr>
        <td class="title1"></td>
        <td class="data1"><input type="submit" name="submit" id="submit" value="提交" /></td>
    </tr>
</table>
</form>