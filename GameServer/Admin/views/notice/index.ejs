<div class="pagetitle">
    <a href="/notice/add">添加公告</a>
</div>
<table width="99%" border="0" align="center" cellpadding="0" cellspacing="1" bgcolor="#c0de98">
    <tr>
        <td class="title">ID</td>
        <td class="title">名称</td>
        <td class="title">排序编号</td>
        <!--
        <td class="title">是否弹出</td>
        <td class="title">弹出编号</td>
        -->
        <td class="title">开始时间</td>
        <td class="title">结束时间</td>
        <td class="title">上架日期</td>
        <td class="title">是否有效</td>
        <td class="title">编辑</td>
    </tr>
<%
    results.forEach(function(item){
%>
<tr>
    <td class="data"><%-item.notice_id%></td>
    <td class="data"><%-item.name%></td>
    <td class="data"><%-item.sort%></td>
    <!--
    <td class="data"><%-item.is_jump==1?'是':'否'%></td>
    <td class="data"><%-item.jump_sort%></td>
    -->
    <td class="data"><%-item.begin_date.format('yyyy-MM-dd hh:mm:ss')%></td>
    <td class="data"><%-item.end_date.format('yyyy-MM-dd hh:mm:ss')%></td>
    <td class="data"><%-item.create_date.format('yyyy-MM-dd hh:mm:ss')%></td>
    <td class="data"><%-item.is_valid==1?'是':'否'%></td>
    <td class="data"><a href="/notice/edit?id=<%-item.notice_id%>">编辑</a></td>
</tr>
<%
});
%>
</table>