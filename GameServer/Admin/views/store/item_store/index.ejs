<div class="pagetitle">
    <a href="/item_store/add">添加商品</a>
</div>
<table width="99%" border="0" align="center" cellpadding="0" cellspacing="1" bgcolor="#c0de98">
    <tr>
        <td class="title">编辑</td>
        <td class="title">道具ID</td>
        <td class="title">排序编号</td>
        <td class="title">道具名称</td>
        <td class="title">性别限制</td>
        <td class="title">图片ID</td>
        <td class="title">佩戴位置</td>
        <td class="title">购买货币类型</td>
        <td class="title">价格</td>
        <td class="title">购买等级要求</td>
        <td class="title">道具描述</td>
        <td class="title">上架时间</td>
        <td class="title">下架时间</td>
        <td class="title">创建时间</td>
        <td class="title">是否上架</td>

    </tr>
<%
    results.forEach(function(item){
%>
<tr>
    <td class="data"><a href="/item_store/edit?id=<%-item.item_id%>"><span class="red">编辑</span></a></td>
    <td class="data"><%-item.item_id%></td>
    <td class="data"><%-item.sort_num%></td>
    <td class="data"><%-item.name%></td>
    <td class="data"><%if(item.sex==0){%><span class="red">无</span><%}
        else if(item.sex==1) {%><span class="red">男</span><%}
        else if(item.sex==2) {%><span class="red">女</span><%}
        %></td>
    <td class="data"><%-item.pic_id%></td>
    <td class="data"><%if(item.pos==0){%><span class="red">手形</span><%}
        else if(item.pos==1) {%><span class="red">麻将桌</span><%}
        else if(item.pos==2) {%><span class="red">指甲</span><%}
        else if(item.pos==3) {%><span class="red">食指</span><%}
        else if(item.pos==4) {%><span class="red">中指</span><%}
        else if(item.pos==5) {%><span class="red">无名指</span><%}
        else if(item.pos==6) {%><span class="red">手腕</span><%}
        else if(item.pos==7) {%><span class="red">纹身</span><%}
        %></td>
    <!--<td class="data"><%-item.currency_type%></td>-->
    <td class="data"><%-item.currency_type == 0?'<span class="red">金贝</span>':'<span class="red">其他</span>'%></td>
    <td class="data"><%-item.price%></td>
    <td class="data"><%-item.lvl_limit%></td>
    <td class="data"><%-item.description%></td>
    <td class="data"><%-item.begin_date.format('yyyy-MM-dd hh:mm:ss')%></td>
    <td class="data"><%-item.end_date.format('yyyy-MM-dd hh:mm:ss')%></td>
    <td class="data"><%-item.create_date.format('yyyy-MM-dd hh:mm:ss')%></td>
    <td class="data"><%-item.is_valid==1?'是':'否'%></td>

</tr>
<%
});
%>
</table>